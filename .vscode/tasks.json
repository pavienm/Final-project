{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (g++)",
      "type": "shell",
      "command": "g++",
      "args": ["-std=c++17", "-O2", "-g", "src/main.cpp", "-o", "fare"],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build (MSVC)",
      "type": "shell",
      "command": "cl",
      "args": ["/std:c++17", "/EHsc", "/Zi", "/Fe:fare.exe", "src\\main.cpp"],
      "windows": { "command": "cl" },
      "group": "build",
      "problemMatcher": ["$msCompile"]
    }
  ]
}
